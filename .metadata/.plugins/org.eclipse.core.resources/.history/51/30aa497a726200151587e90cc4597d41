/**
 * @author edwardlambke
 *
 */
public class StudentDriver {

	/**
	 * 
	 */
	/**
	 * @param args
	 */
	
	public static StudentDatabase db = new StudentDatabase();
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		db.addStudent("coleen");
		db.changeQuizMark("COLEEN", 0, 20);
		db.addStudent("BILL");
		db.changeQuizMark("bill", 8, 10);
		
		db.showQuizMarks();
		
		db.changeQuizMark("bill", 6, 100);
		db.showQuizMarks();
		
		getQuizzes("bill");
	}
	
	private static void getQuizzes(String name){
		System.out.format("\n\n %s:",name);
		for (int mark : db.getQuizzes("name")) {
			System.out.format("%d ", mark);
		}
	}

}
